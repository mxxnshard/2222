.footer
  padding 30px 200px

.footer__header
  display flex
  justify-content center
  h1 
    font-size 24px
    margin-bottom 20px
    text-transform uppercase

.footer__nav
  display flex
  justify-content space-around

.footer__pages
  display flex
  flex-direction column
  a
    text-transform uppercase
    text-decoration none
    color #000
    font-size 14px
    margin-bottom 5px
    &:last-child
      margin-bottom 0
    
.footer__links
  a
    margin-right 20px
    &:last-child
      margin-right 0
  svg
    height 35px
    color grey

.break-line1
  border-top 1px dashed #000
  width 100%
  margin 10px 0

@media(max-width:1000px)
  .footer
    padding 30px 100px

@media(max-width:650px)
  .footer
    padding 30px 10px
  .footer__header
    h1 
      font-size 20px

@media(max-width:500px)
  .footer__nav
    align-items center
    flex-direction column
  .footer__pages
    margin-bottom 30px
    text-align center

@media(max-width:400px)
  .footer
    padding 30px 5px
  
