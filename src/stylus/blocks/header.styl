.header
  padding 30px 200px

.header__content
  display flex
  justify-content space-between
  align-items center

.header__nav
  a
    text-decoration none
    margin-right 50px
    color #000
    font-size 20px
    &:last-child
      margin-right 0
    &:hover
      color red
      transition 0.3s all

.header__signin
  a
    padding 7px 20px
    border 1px solid #000
    background-color #fff
    cursor pointer
    text-decoration none
    font-size 16px
    color #000
    &:hover
      background-color #000
      color #fff

.break-line
  content ""
  width 100%
  height 1.5px
  margin-top 30px
  background-color #000

@media(max-width:1400px)
  .header
    padding 30px 150px

@media(max-width:1200px)
  .header
    padding 30px 100px

@media(max-width:1000px)
  .header
    padding 30px 50px

@media(max-width:650px)
  .header__nav
    a
      margin-right 20px
      &:last-child
        margin-right 0

.header__mobile-icon
  display none

.header__mobile-btn
  background transparent
  border none
  padding 0
  svg 
    height 40px

.header__mobile-content
  display none
  flex-direction column
  a
    text-decoration none
    color #000
    font-size 20px

@media(max-width:500px)
  .header__nav
    display none
  .header__mobile-icon
    display block
